{% extends 'base.html.twig' %}

{% block body %}
    {% for type in types %}
    <table class="table text-center">
        <h1>{{ type.libelleType }}</h1>
        <tr>
            <th class="active text-center">Titre</th>
            <th class="active text-center">Description</th>
            <th class="active text-center">Ville</th>
            <th class="active text-center">Cotisation</th>
            <th class="active text-center">Modifer</th>
            <th class="active text-center">Supprimer</th>
        </tr>

        {% for evenement in type.evenements %}
            <tr>
                <td>
                    <a href="{{ path('evenement.show', {id: evenement.id}) }}">
                        {{ evenement.titre }}
                    </a>
                </td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.ville }}</td>
                <td>{{ evenement.cotisation }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('evenement.edit', {id: evenement.id}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Ã‰diter
                    </a>
                </td>
                <td>
                    <a href="{{ path('evenement.delete', {id: evenement.id}) }}" class="btn btn-default navbar-btn">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}

    </table>
    {% endfor %}

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h3>Détails de l'événement <i>{{ evenement.titre }}</i> :</h3>
    <div class="media">
        <div class="media-body">
            <p>
                <small> Evenement de type : <i>{{ evenement.idType.libelleType }}</i></small>
            </p>
            <p>
                <H4>
                    <p><strong><u>Description</u></strong></p>
                    <p style="border:solid; border-width:2px; border-color:#868686; padding:5px;">{{ evenement.description|nl2br }}</p>
                </H4>
            </p>
            <p>
                <strong>Lieu : </strong>{{ evenement.adresse }} <i>({{ evenement.ville }})</i>
            </p>
            <p>
                <strong>Cotisation :</strong> {{ evenement.cotisation }} €
            </p>
            <p>
                <strong>Début de l'événement :</strong> {{ evenement.dateDebut|date('m/d/Y') }}
            </p>
            <p>
                <strong>Fin de l'événement :</strong> {{ evenement.dateFin|date('m/d/Y') }}
            </p>

            {% if evenement.nbPlace%} {% if evenement.nbPlace < 0 %}
            <p>
                <strong>Nombre de place maximum :</strong> {{ evenement.nbPlace }}
            </p>
            {% endif %} {% endif %}

            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="{{ path('evenement.list') }}">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des événements
                    </a>

                    <a class="btn btn-primary" href="{{ path('evenement.edit', {id: evenement.id}) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>

                    <a href="{{ path('evenement.delete', {id: evenement.id}) }}" class="btn btn-default navbar-btn">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% if commentaires is defined %}

    <div class="media">
        <div class="media-body">
            <p>
                <U>Commentaires</U>

                {% for commentaire in Commentaires %}
                    <div>
                        <H5>{{ commentaire.auteur }}</H5>
                        <p style="border:solid; border-width:2px; border-color:#868686; padding:5px;">
                            {{ commentaire.content }}
                        </p>
                    </div>
                {% endfor %}
            </p>
        </div>
    </div>

        <ul>

        </ul>
    {% endif %}

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de l'événement <i>{{ evenement.titre }}</i> :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ evenement.adresse }}</strong> <i>({{ evenement.ville }})</i></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Débute le {{ evenement.dateDebut|date('m/d/Y') }}</i>
                </div>
            </div>

            <p>
                <strong>{{ evenement.description }}</strong>
                <small> - <i>{{ evenement.idType.libelleType }}</i></small>
            </p>

            <p>{{ evenement.description|nl2br }}</p>

            <p>
                <strong>Cotisation :</strong> {{ evenement.cotisation }}
            </p>
            <p>
                <strong>Fin de l'événement :</strong> {{ evenement.dateFin|date('m/d/Y') }}
            </p>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="#">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des événements
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
